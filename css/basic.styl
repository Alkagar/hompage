// ----- imports --------------------------
@import index

// ----- grid configuration ---------------
for n in (1..24) 
    .span_24_{n}
        span(n/24)
    .col_24_{n}
        col(n/24)


// ----- basic colors ---------------------
_black = #000000
_white = #FFFFFF
_brown = #7F5D3E
_brown_dark = _brown - 70%
_brown_middle = _brown - 30%


_page_width = 960




navigation(lipadding)
    &
        margin: 0px
        padding: 0px
        list-style: none
    & li 
        display: inline
        padding: lipadding
        margin: 5px
        & a
            color: _white - 60%   
            text-decoration: none
            &:hover
                color: _brown

*
    font-family: 'Raleway', sans-serif !important;

body
    background-color: _black
    font-family: 'Raleway', sans-serif !important;
    color: _white

h1 
    font-size: 200%
    padding: 10px 0px
    color: _white - 40%
    

.page
    width: unit(_page_width,px)
    margin: 0 auto

.
    display: none
    width: 100%
    height: 225px
    background-color: _brown_dark 
    background-image: url(../gfx/banner.png)
    background-size: cover

.menu
    box-shadow: 0px 6px 5px -5px _brown
    width: 100%
    left: 0px
    padding: 25px 0px
    ol.navigation
        navigation(10px 40px)
    ol.social
        navigation(10px 5px)

.content
    width: 100%
    min-height: 400px
    margin-top: 15px
    background-color: _black + 2%

    .row
        margin-bottom: unit(_page_width/100,px)
        overflow: hidden

    .post-box 
        background-color: _black + 3%
        .post-box-container
            border: 1px solid _brown_dark
            padding: 5px
            padding-bottom: 0px
        .post-title 
            padding: 5px 0px
            height: 2.5em
            color: _white - 20%
        .post-tags
        .post-date 
            color: _brown_middle
            font-size: 90%
            margin: 0px -5px
            padding-left: 5px
            font-style: italic
            background-color: _black + 4%
        .post-date
            margin-top: 5px
        .post-thumbnail
            width: 100%
            height: 220px
            background-color: red
            background-image: url(../gfx/thumb-1.png)
            background-size: cover
    .post-box:nth-child(even)
        .post-thumbnail
            background-image: url(../gfx/thumb-2.png)

.align-left
    text-align: left

.align-right
    text-align: right

