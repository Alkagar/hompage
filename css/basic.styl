// ----- basic colors ---------------------
_black = #000000
_white = #FFFFFF
_brown = #7F5D3E
_brown_dark = _brown - 70%
_brown_middle = _brown - 30%

_page_width = 960

opacity(r,g,b,a)
    /* Fallback for web browsers that doesn't support RGBa */
    background: rgb(r, g, b);
    /* RGBa with opacity */
    background: rgba(r, g, b, a);
    /* For IE 5.5 - 7*/
    filter:unquote('progid:DXImageTransform.Microsoft.gradient(startColorstr=#99000000, endColorstr=#99000000)')
    /* For IE 8*/
    -ms-filter: unquote('"progid:DXImageTransform.Microsoft.gradient(startColorstr=#99000000, endColorstr=#99000000)"')

navigation(lipadding)

*
    font-family: 'Raleway', sans-serif !important;

body
    background-color: _black
    font-family: 'Raleway', sans-serif !important;
    color: _white

h1 
    font-size: 150%
    padding: 10px 0px 5px 10px
    //padding: 10px 0px
    color: _white - 40%
    text-transform:lowercase

h2 
    font-size:130%
    color: _white - 40%
    text-transform:lowercase

.banner
    display: none
    width: 100%
    height: 225px
    background-color: _brown_dark 
    background-image: url(../gfx/banner.png)
    background-size: cover

.menu
    box-shadow: 0px 6px 5px -5px _brown
    width: 100%
    padding: 5px 0px
    overflow: hidden
    ol.inline-menu
        col(1/1)
        margin: 0px
        padding: 0px
        list-style: none
        display: block
        li 
            display: inline
            margin: 0px
            a
                color: _white - 60%   
                text-decoration: none
            a:hover
                color: _brown
    ol.navigation
        @extend .menu ol.inline-menu
        li
            padding: 0px 3px
        li:first-child
            padding-left: 5px
    ol.social
        @extend .menu ol.inline-menu
        margin-top: 10px
        li
            padding: 0px 5px
            img.social-ico
                width: 16px
                height: 16px

.content
    width: 100%
    margin-top: 15px
    article
        color: _white - 10%
        padding:10px
        line-height: 1.5em
        p
            text-align:justify

    footer
        overflow: hidden
        .slider
            width: 9600px
            .post-box
                span(1/60)
                margin: 0px 3px
        
    .post-box 
        _background=_black + 3%
        .post-box-container
            background-color: _background
            border: 1px solid _brown_dark
            padding: 5px
        .post-title 
            opacity(0,0,0,0.5)
            padding: 5px
            color: _white - 20%
        .post-meta
            display:none;
            width: 98%
            color: _brown_middle
            font-size: 90%
            font-style: italic
        .post-thumbnail
            cursor:pointer
            width: 100%
            background-color: _background
            background-size: cover
            background-image: url(../gfx/thumb-1.png)

// ------- commons -------------------------
.align-left
    text-align: left

.align-right
    text-align: right


// ------- media queries for different sizes -----
_widths = 400 600 700 960
_cols = 2 4 5 6 

_columns = _cols[i]

_page_width = 300 
.page 
    width: unit(_page_width, px)
    margin: 0 auto

    footer.post
        width:100%
        padding: 16px 0px

    footer.page
        border-top: 1px solid _white - 40%
        text-align: right
        padding: 0px 0px
        margin-top: 10px 
        color: _brown
        font-size: 80%
.content
    _padding = 10
    _margin = _padding/2
    _columns = 2
    _size = _page_width/_columns - _padding
    .grid-sizer
        width: unit(_size, px) + _padding
        height: unit(_size, px) + _padding*2
    .box-1-1 
        width: unit(_size, px)
        margin: unit(_margin, px)
        .post-thumbnail
            height: unit(_size, px)
    .box-1-2
        width: unit(_size, px)
        margin: unit(_margin, px)
        .post-thumbnail
            height: unit((_size*2) + _padding*2, px)
    .box-2-1
        width: unit((_size*2) + _padding, px)
        margin: unit(_margin, px)
        .post-thumbnail
            height: unit(_size, px)
    .box-2-2
        width: unit((_size*2) + _padding, px)
        .post-thumbnail
            height: unit((_size*2) + _padding*2, px)
    .grid-sizer 
        width: unit((_page_width/_columns), px)
    .post-box 
        margin-bottom: unit(_padding, px)

for _page_width, i in _widths
    _columns = _cols[i]
    bp(unit(_page_width, px)) 
    .page 
        width: unit(_page_width, px)
    .content
        _padding = 10
        _margin = _padding/2
        _size = _page_width/_columns - _padding
        .grid-sizer
            width: unit(_size, px) + _padding
            height: unit(_size, px) + _padding*2
        .box-1-1 
            width: unit(_size, px)
            margin: unit(_margin, px)
            .post-thumbnail
                height: unit(_size, px)
        .box-1-2
            width: unit(_size, px)
            margin: unit(_margin, px)
            .post-thumbnail
                height: unit((_size*2) + _padding*2, px)
        .box-2-1
            width: unit((_size*2) + _padding, px)
            margin: unit(_margin, px)
            .post-thumbnail
                height: unit(_size, px)
        .box-2-2
            width: unit((_size*2) + _padding, px)
            margin: unit(_margin, px)
            .post-thumbnail
                height: unit((_size*2) + _padding*2, px)
        .grid-sizer 
            width: unit((_page_width/_columns), px)
        .post-box 
            margin-bottom: unit(_padding, px)
    endbp()


bp(600px)
.menu
    ol.navigation
        li
            padding: 0px 20px
endbp()

bp(700px) 
.menu
    ol.navigation
        span(18/24)
        shift(-6/24)
    ol.social
        span(6/24)
        shift(18/24)
        margin-top: 0px
        text-align:right
        li
            padding: 0px 10px
h1
    font-size: 200%
h2
    font-size: 150%
.content
    article
        p
            font-size: 120%
endbp()

bp(960px) 
.menu
    ol.navigation
        li
            padding: 0px 35px
endbp()
